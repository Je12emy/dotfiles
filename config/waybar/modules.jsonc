{
  // Modules configuration
  "wlr/workspaces": {
    "disable-scroll": true,
    "on-click": "activate"
  },
  "tray": {
    "icon-size": 16,
    "spacing": 8
  },
  "hyprland/window": {
    "max-length": 48
  },
  "cpu": {
    "format": "<span color='#75A42F'>CPU</span> {usage}%",
    "interval": 2
  },
  "memory": {
    "format": "<span color='#75A42F'>RAM</span> {used}GiB",
    "interval": 2
  },
  "battery": {
    "interval": 60,
    "format": "<span color='#75A42F'>BAT</span> {capacity}%",
    "format-icons": ["", "", "", "", ""],
    "tooltip": true
  },
  "pulseaudio": {
    "scroll-step": 5, // %, can be a float
    "format": "<span color='#75A42F'>VOL</span> {volume}%",
    "format-muted": "󰖁 Muted",
    "format-icons": ["", "", ""],
    "on-click": "pavucontrol"
  },
  "clock": {
      "interval": 60,
      "format": "<span color='#75A42F'>DATE</span> {:%Y-%m-%d %OI:%M %p}",
      "max-length": 25
  },
  "disk": {
      "interval": 30,
      "format": "<span color='#75A42F'>DISK</span> {percentage_free}%",
      "path": "/"
  },
  "custom/separator":{
		"format": "<span color='#8CD226'>|</span>"
  },
 "custom/updates": {
     "format": "<span color='#75A42F'>UPDATES</span> {}",
     "return-type": "json",
     "format-icons": {
         "has-updates": "󱍷",
         "updated": "󰂪"
     },
     "exec-if": "which waybar-module-pacman-updates",
     "exec": "waybar-module-pacman-updates"
 },
}
